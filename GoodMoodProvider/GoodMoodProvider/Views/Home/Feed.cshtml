
@model IEnumerable<News>

@{
    ViewData["Title"] = "NewsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>NewsList</h2>
<br>
<br>
@foreach (News news in Model)
{
    <h3>@news.Article</h3>
    <br>

    @Html.Raw(System.Web.HttpUtility.HtmlDecode(@news.Body))
    <br>

    @if (news.Author != null)
    {<i>By: </i>@news.Author}
    @if (news.SourceSite != null)
    {<i> from: </i> <a href="@news.SourceSite"></a>}
    <br>

    @news.DatePosted

    <hr>

    <hr>

    <br>
}
